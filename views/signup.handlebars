<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link rel="stylesheet" href="css/signup.css">
<link rel="stylesheet" href="css/cursor.css">

<title>Login</title>

</head>

<body>

    <div class="cursor"></div>
    <div class="cursor-clone"></div>

    <div id="signup-modal">

        <p id="close-btn-wrapper"><i class="close-btn fas fa-2x fa-times"></i></p>
        <h5 id="modal-msg"></h5>

    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="row">
                    <div class="col-lg-12 main">

                        <div id="login-div">

                            <form id="login-form">
                                
                                <h1 id="login-header">Signup Form</h1>

                                <label>Username:</label>
                                    <input type="text" name="username" class="input-btn" id="signup-username" placeholder="master_of_the_universe" required>
                                
                                <label>Email:</label>
                                    <input type="email" name="email" class="input-btn" id="signup-email" placeholder="johndoe@gmail.com">

                                <label>Password:</label>

                                <br>
                                <label id="helper">password must contain more than 8 characters</label>
                                <br>
                                
                                    <input type="password" name="password" class="input-btn" id="signup-password" required>
                                
                                <input type="submit" value="Submit" class="input-btn" id="submit-btn">

                            </form>

                            <a id="login" href="/login">Already Signed Up?</a>

                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>

    <script src="js/signup.js"></script>
    <script src="js/cursor.js"></script>

</body>