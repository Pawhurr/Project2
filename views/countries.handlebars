<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/2.1.2/TweenMax.min.js"></script>

<link href="https://fonts.googleapis.com/css?family=Anton|Roboto" rel="stylesheet">
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/countries/navbar.css">

<title>Countries</title>

</head>

<body>

    <div id="nav-box">
    </div>
        <nav id="navbar">
            <ul>
                <li><a href="/">Home</a></li>
                <li id="li">Countries</li>
                    <ul id="country-list">
                        {{#each result}}
                            <li><a href="#{{country}}">{{country}}</a></li>
                        {{/each}}
                    </ul>
            </ul>
        </nav>
    <h1 id="countryHeader">{{result.0.dataValues.continent}}</h1>
    {{#each result}}

    <div class="parallax" style="background-image: url('img/{{dataValues.country}}.jpg')">

        <div id="{{country}}" class="cityHeader">
            <h2>{{country}}</h2>
        </div>
    </div>

    <div class="info p-5" style="background-image: url('img/extra_clean_paper.png')">
        <div class="row">
            <div class="col-6">
                <div>
                <p><span class="bullets">Best time of year to visit:</span> {{bty}}</p>
                </div>
                <div>
                <p><span class="bullets">Popular foods:</span> {{foods}}</p>
                <p><span class="bullets">Fun fact:</span> {{fun_fact}}</p>
                </div>
                <div>
                    <p><span class="bullets">Activities:</span></p>
                </div>
            </div>
            <div class="col-6">

            </div>
        </div>
        <p>{{brief_history}}</p>
        <p>{{facts}}</p>
    </div>

    {{/each}}



    <script src="js/countries/nav.js"></script>
</body>