    {{#each result}}

    <div id="{{country}}Anchor" class="parallax" style="background-image: url('img/{{dataValues.country}}.png')">

        <div id="{{country}}" class="cityHeader">
            <h1 data-aos-anchor-placement="#{{country}}Anchor" data-aos="fade-up" data-aos-duration="2000" data-aos-once="false">{{country}}</h1>
        </div>
    </div>

    <div class="info p-5">
        <div class="row">
            <div class="col-6">
                <p data-aos="fade-up" data-aos-delay="100" data-aos-duration="2000" data-aos-once="false"><span class="bullets">Capital city:</span> {{capital}}</p>
                <p data-aos="fade-up" data-aos-delay="200" data-aos-duration="2000" data-aos-once="false"><span class="bullets">Best time of year to visit:</span> {{bty}}</p>
                <p data-aos="fade-up" data-aos-delay="300" data-aos-duration="2000" data-aos-once="false"><span class="bullets">Popular foods:</span> {{foods}}</p>
                <p data-aos="fade-up" data-aos-delay="400" data-aos-duration="2000" data-aos-once="false"><span class="bullets">Popular religions:</span> {{religions}}</p>
                <p data-aos="fade-up" data-aos-delay="500" data-aos-duration="2000" data-aos-once="false"><span class="bullets">Fun fact:</span> {{fun_fact}}</p>
            </div>
            <div class="col-6">

            </div>
        </div>
        <p data-aos="fade-up" data-aos-delay="600" data-aos-duration="2000" data-aos-once="false">{{brief_history}}</p>
        <p data-aos="fade-up" data-aos-delay="700" data-aos-duration="2000" data-aos-once="false">{{facts}}</p>
    </div>

    {{/each}}
